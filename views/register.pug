extends layout
block content
    h1 This is the register page
    form(method='POST' action="/register")
        div.form-group
            label(for="name") Name:
            input#name.form-control(type="text", placeholder="firstand last", name="name")
        div.form-group
            label(for="email") Email:
            input#email.form-control(type="email", placeholder="example@mail.com", name="email")
        div.form-group
            label(for="favoriteBook") Favorite Book:
            input#favoriteBook.form-control(type='text', placeholder="book title", name="favoriteBook")
        div.form-group
            label(for="pw") Password:
            input#pw.form-control(type="password" name="password")
        div.form-group
            label(for="pw2") Confirm Password:
            input#pw2.form-control(type="password", name="confirmPassword")
        button.btn.btn-primary(type="submit") Sign up!
        
